<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditStudent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:weightSum="50"
        android:orientation="vertical">



    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_student_edit_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Όνομα: "/>

        <EditText
            android:id="@+id/edit_student_edit_name_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Όνομα: "
            android:visibility="gone"/>

        <Button
            android:id="@+id/edit_student_edit_name_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:text="επεξ."/>


    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_student_edit_phone_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Τηλέφωνο: "/>

        <EditText
            android:id="@+id/edit_student_edit_phone_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Τηλέφωνο: "
            android:inputType="phone"
            android:visibility="gone"/>

        <Button
            android:id="@+id/edit_student_edit_phone_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:text="επεξ."/>


    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_student_edit_class_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Τάξη: "/>

        <Spinner
            android:id="@+id/edit_student_edit_class_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <Button
            android:id="@+id/edit_student_edit_class_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:text="επεξ."/>


    </GridLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_student_edit_cost_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Κόστος ανά ώρα: "/>

        <EditText
            android:id="@+id/edit_student_edit_cost_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Κόστος ανά ώρα: "
            android:inputType="numberDecimal"
            android:visibility="gone"/>

        <Button
            android:id="@+id/edit_student_edit_cost_per_hour_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:text="επεξ."/>


    </GridLayout>

    </LinearLayout>

<Button
    android:id="@+id/edit_student_edit_submit_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center"
    android:text="Επιβεβαίωση"/>

</GridLayout>